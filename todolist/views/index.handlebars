<form class="form-horizontal" method="POST" action="/taches">
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Titre</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Titre">
        </div>
    </div>
    <div class="form-group">
        <label for="author" class="col-sm-2 control-label">Auteur</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="author" name="author" placeholder="Auteur">
        </div>
    </div>
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">Urgence</label>
        <div class="col-sm-10">
            <select class="form-control" id="urgence" name="urgence">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
